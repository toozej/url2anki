{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run url2anki",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--url",
                "https://kubernetes.io/docs/reference/glossary/?all=true",
                "--question-selector",
                "div.term-name",
                "--answer-selector",
                "div.term-definition",
                "--output-file",
                "${workspaceFolder}/anki_k8s.csv"
            ]
        },
        {
            "name": "Get url2anki version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": ["version"]
        }
    ]
}